<div class="container">
  <div class="col-md-4 col-md-offset-4 col-sm-10 col-xs-offset-1 col-xs-10">

    <h2>パスワードを変更する</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field form-space">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "パスワード （#{@minimum_password_length if @minimum_password_length}文字以上）" %>
      </div>

      <div class="field form-space">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
      </div>

      <div class="actions action-button">
        <%= f.submit "パスワードを変更する" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
