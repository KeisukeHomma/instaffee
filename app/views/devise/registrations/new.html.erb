<div class="container">
  <div class="col-md-4 col-md-offset-4 col-sm-10 col-xs-offset-1 col-xs-10">
    <h2>サインアップ</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- f.error_messages! -->
      <%= devise_error_messages! %>

      <div class="field form-space">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="field form-space">
        <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
      </div>

      <div class="field form-space">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード （#{@minimum_password_length if @minimum_password_length}文字以上）" %>
      </div>

      <div class="field form-space">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
      </div>

      <div class="actions action-button">
        <%= f.submit "サインアップ", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
