<div class="jumbotron top-title main-header">
  <h1>さあ、Instaffeeを始めよう</h1>
  <div><%= link_to "はじめる", posts_path, class: "btn btn-default btn-lg" %></div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

      <% if notice.present? %>
          <div class="alert alert-info" role="alert">
            <strong><%= notice %></strong>
          </div>
      <% end %>

      <% if alert.present? %>
          <div class="alert alert-danger" role="alert">
            <strong><%= alert %></strong>
          </div>
      <% end %>

    </div>
  </div>
</div>
